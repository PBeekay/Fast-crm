# ============================================================================
# FastCRM Environment Configuration
# ============================================================================
# IMPORTANT: Copy this file to .env and update all values
# NEVER commit .env file to version control
# ============================================================================

# ============================================================================
# SECURITY: JWT Secret Key (REQUIRED)
# ============================================================================
# Generate a strong secret key (minimum 32 characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Change this in production!
CRM_SECRET_KEY=your_secure_secret_key_here_minimum_32_characters_CHANGE_THIS_IN_PRODUCTION

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (default - for development)
DATABASE_URL=sqlite:///./crm.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/fastcrm

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/fastcrm

# ============================================================================
# CORS Configuration (SECURITY)
# ============================================================================
# Comma-separated list of allowed origins
# IMPORTANT: Update this with your actual frontend URLs in production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Environment Mode
# ============================================================================
# Options: development, production, testing
ENVIRONMENT=development

# ============================================================================
# JWT Token Configuration
# ============================================================================
# Access token expiration in minutes (default: 60 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Refresh token expiration in days (default: 30 days)
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================================================
# Rate Limiting (Optional - requires Redis)
# ============================================================================
# Redis URL for distributed rate limiting
# REDIS_URL=redis://localhost:6379

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Admin Configuration
# ============================================================================
# Default admin email (for initial setup)
# ADMIN_EMAIL=admin@example.com

# ============================================================================
# Email Configuration (Optional - for notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@fastcrm.com

# ============================================================================
# Security Headers
# ============================================================================
# Enable/disable security features
ENABLE_SECURITY_HEADERS=true

# ============================================================================
# Session Configuration
# ============================================================================
# Maximum number of active sessions per user
MAX_SESSIONS_PER_USER=5

# ============================================================================
# File Upload (if implemented)
# ============================================================================
# MAX_UPLOAD_SIZE_MB=10
# UPLOAD_DIR=./uploads

# ============================================================================
# API Configuration
# ============================================================================
# API rate limits (requests per minute)
API_RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Development/Debug Settings
# ============================================================================
# Enable debug mode (NEVER enable in production!)
DEBUG=false

# Enable SQL query logging
SQL_ECHO=false